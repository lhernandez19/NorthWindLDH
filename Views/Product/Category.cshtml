@using Northwind.Models
@model IEnumerable<Category>


@foreach (Category category in Model)
{
<div class="list-group justify-content-md-center">
  <a asp-controller="Product" asp-action="Index" asp-route-id="@category.CategoryId" class=" col-md-6 list-group-item list-group-item-secondary ">
     @category.CategoryName - 
        @category.Description
  </a>
</div>


}
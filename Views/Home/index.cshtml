@using Northwind.Models
@model IEnumerable<Discount>

<div class="jumbotron my-3 bg-info text-white">
    <h1 class="display4">Northwind</h1>
    <p class="lead">We have the best prices and selection of high quality foods &amp; beverages on the planet! Check out our featured discounts below.</p>
    <hr class="my-4 bg-white">
    <p>For exceptional international quisuine, look no further.</p>
    <a class="btn btn-outline-light btn-lg" href="#" role="button"><i class="fas fa-shopping-cart"></i> Order Now</a>
</div>

<div class="container-fluid ">

<div class="row">
    @foreach (Discount discount in Model)
    {
        <div class="col discounts px-2 p-3 m-3 rounded shadow">
            <h3>@discount.Title</h3>
            <div class="dropdown-divider"></div>
            <div class="mb-4">
                @discount.Description
            </div>
            <i>Discount expires: @discount.EndTime.ToString("MM/dd/yyyy")</i><br />
            <a href="#" class="code" data-code="@discount.Code" data-product="@discount.Title"><i class="far fa-hand-point-right"></i>Discount Code</a>
        </div>
    }
</div>

<!-- toast -->
     <div id="toast" class="toast" style="position: absolute; top: 65px; right: 10px;">
        <div class="toast-header">
            <strong class="mr-auto" id="title">discountTitle</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Discount Code: <strong id="code">CODE</strong>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/client.js"></script>
}

